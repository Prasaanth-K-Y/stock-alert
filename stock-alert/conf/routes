GET     /                      controllers.HomeController.index


GET     /items                 controllers.StockController.getAllItems()
GET     /items/:id             controllers.StockController.getItem(id: Long)
PUT     /items/:id/:stock      controllers.StockController.updateStock(id: Long, stock:Long)
POST    /items                 controllers.StockController.addItems()
POST    /orders                controllers.StockController.newOrder()
GET     /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)
GET     /csrf-token            controllers.StockController.csrfToken()

POST  /user   controllers.UserController.addUser
GET     /user              controllers.UserController.getAll()
GET     /user/:id          controllers.UserController.getUser(id: Long)
POST    /login                  controllers.AuthController.login()  
PUT   /user/:id/phone   controllers.UserController.updatePhone(id: Long)
DELETE  /user/:id          controllers.UserController.deleteUser(id: Long)
